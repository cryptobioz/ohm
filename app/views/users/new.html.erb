<div class="page-container register-container">
	<div class="page-content">
		<div class="content-wrapper">
			<div class="content">
				<%= form_for(:user, :url => {:controller => 'users', :action => 'create' }, :method => 'post') do |f| %>
					<div class="row">
						<div class="col-md-6 col-md-offset-3">
							<div class="panel registration-form">
								<div class="panel-body">
									<div class="text-center">
										<div class="icon-object border-success text-success"><i class="icon-plus3"></i></div>
										<h5 class="content-group-lg">Création de votre compte <small class="display-block">Tous les champs sont requis</small></h5>
									</div>

									<div class="form-group has-feedback">
										<div class="input-group">
											<%= f.text_field :username, :required => true, placeholder: "Nom d'utilisateur", id: "username", class: "form-control" %>
											<span class="input-group-addon"><i class="icon-user-plus text-muted"></i></span>
										</div>
										<% if @user.errors.full_messages_for(:username).any? %>
											<ul class="help-block">
												<% for message_error in @user.errors.full_messages_for(:username) %>
													<li><%= message_error %></li>
												<% end %>
											</ul>
										<% end %>
									</div>

									<div class="form-group has-feedback">
										<div class="input-group">
											<%= f.email_field :email, :required => true, placeholder: "Adresse email", id: "email", class: "form-control" %>
											<span class="input-group-addon"><i class="icon-mention text-muted"></i></span>
										</div>
										<% if @user.errors.full_messages_for(:email).any? %>
											<ul class="help-block">
												<% for message_error in @user.errors.full_messages_for(:email) %>
													<li><%= message_error %></li>
												<% end %>
											</ul>
										<% end %>
									</div>

									<div class="row">
										<div class="col-md-6">
											<div class="form-group has-feedback">
												<div class="input-group">
													<%= f.password_field :password, :required => true, placeholder: "Mot de passe", id: "password", class: "form-control" %>
													<span class="input-group-addon"><i class="icon-user-lock text-muted"></i></span>
												</div>
											</div>
											<% if @user.errors.full_messages_for(:password).any? %>
												<ul class="help-block">
													<% for message_error in @user.errors.full_messages_for(:password) %>
														<li><%= message_error %></li>
													<% end %>
												</ul>
											<% end %>
										</div>

										<div class="col-md-6">
											<div class="form-group has-feedback">
												<div class="input-group">
													<%= f.password_field :password_confirmation, :required => true, placeholder: "Vérification", id: "password_confirmation", class: "form-control" %>
													<span class="input-group-addon"><i class="icon-user-lock text-muted"></i></span>
												</div>

											</div>
											<% if @user.errors.full_messages_for(:password_confirmation).any? %>
												<ul class="help-block">
													<% for message_error in @user.errors.full_messages_for(:password_confirmation) %>
														<li><%= message_error %></li>
													<% end %>
												</ul>
											<% end %>
										</div>
									</div>

									<div class="form-group">
										<div class="checkbox">
											<label>
												<input name="accept_cgu" type="checkbox" class="styled">
													J'accepte les <a href="/cgu">conditions générales d'utilisation</a>
											</label>
										</div>
										<% if flash.any? %>
											<ul class="help-block">
												<% flash.each do |key, value| %>
													<li><%= content_tag :div, value %></li>
												<% end %>
											</ul>
										<% end %>
									</div>

									<div class="text-right" id="bouton_submit">
										<button type="submit" class="btn bg-teal-400 btn-labeled btn-labeled-right ml-10"><b><i class="icon-plus3"></i></b> Confirmer</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	</div>
