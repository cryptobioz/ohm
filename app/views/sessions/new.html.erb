<!-- Page container -->
<div class="page-container login-container">

	<!-- Page content -->
	<div class="page-content">

		<!-- Main content -->
		<div class="content-wrapper">

			<!-- Content area -->
			<div class="content">
				<%= form_for(:session, :url => {:controller => 'sessions', :action => 'create'}, :method => 'POST') do |f| %>
					<div class="row">
						<div class="col-md-4 col-md-offset-4">
							<div class="panel panel-body login-form">
								<div class="text-center">
									<h5 class="content-group-lg">Identifiez vous à votre compte <small class="display-block">Entrez vos identifiants</small></h5>
								</div>

								<div class="form-group has-feedback has-feedback-left">
									<%= f.text_field :username, :required => true, placeholder: "Nom d'utilisateur", id: "username", class: "form-control" %>
									<div class="form-control-feedback">
										<i class="icon-user text-muted"></i>
									</div>
									<% if flash.any? %>
										<ul class="help-block">
											<% flash.each do |key, value| %>
												<li><%= content_tag :div, value %></li>
											<% end %>
										</ul>
									<% end %>
								</div>

								<div class="form-group has-feedback has-feedback-left">
									<%= f.password_field :password, :required => true, placeholder: "Mot de passe", id: "password", class: "form-control" %>
									<div class="form-control-feedback">
										<i class="icon-lock2 text-muted"></i>
									</div>
								</div>
								<div class="form-group login-options">
									<div class="row">
										<div class="col-sm-8">
											<label class="checkbox-inline">
												<input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="styled">
												Se souvenir de moi
											</label>
										</div>
									</div>
								</div>

								<div class="form-group">
									<button type="submit" id="submit" name="submit" class="btn bg-blue btn-block">Connexion<i class="icon-arrow-right14 position-right"></i></button>
								</div>

								<div class="form-group">
									<span class="help-block text-center no-margin"><a href="/password_reset">Mot de passe oublié ?</a></span>
								</div>

								<div class="content-divider text-muted form-group"><span>Vous n'avez pas de compte ?</span></div>
									<a href="/register" class="btn btn-default btn-block content-group">Inscrivez-vous!</a>
									<span class="help-block text-center no-margin">En poursuivant, vous confirmez avoir lu nos</span>
									<span class="help-block text-center no-margin"><a href="/cgu">Conditions générales d'utilisation</a></span>
								</div>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>
